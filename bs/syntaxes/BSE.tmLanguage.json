{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.bse",
    "name": "BSE",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#functions"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.bse",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.bse",
                    "begin": "/\\*",
                    "end": "\\*/",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.comment.bse"
                        }
                    },
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.comment.bse"
                        }
                    }
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.bse",
            "begin": "\"",
            "end": "\"",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.string.begin.bse"
                }
            },
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.string.end.bse"
                }
            },
            "patterns": [
                {
                    "name": "constant.character.escape.bse",
                    "match": "\\\\(.)"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.bse",
                    "match": "\\b(if|else|while|begin|end|and|or|not|return|then)\\b"
                },
                {
                    "name": "keyword.other.bse",
                    "match": "\\b(local|uses|error)\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "support.function.bse",
                    "match": "\\b(print|LogInfo|SQL:New|SQL:Open|Obj:NewArray|obj:GetByKey|Obj:AddArrayItems|sendEmail|sendEmailMultiDestinaire|StringExplode|dumpvar|SQL:ExecDirect|SQL:Eof|SQL:fieldValue|formatdatetime|Now)\\b"
                }
            ]
        },
        "declarations": {
            "patterns": [
                {"name": "variable.declaration.bse", "match": "\\blocal\\s+\\w+"}
            ]
        },
		"import.library.bse": {
			"name": "keyword.other.import.bse",
			"match": "^\\s*Uses\\s+([\\w\\s,]+)"
		},
		"variable.declaration.bse": {
			"begin": "\\blocal\\b",
			"end": "(?=$|//)",
			"beginCaptures": {
				"0": {"name": "storage.type.variable.bse"}
			},
			"patterns": [
				{
					"match": "\\b\\w+\\b",
					"name": "variable.other.bse"
				}
			]
		}
		
		
		
    }
}